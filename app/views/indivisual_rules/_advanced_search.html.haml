= form_tag '', :method => 'patch', :class => 'form-horizontal', :autocomplete=>"off" do
  = hidden_field_tag :approval_status, params[:approval_status]
  .control-group
    = label_tag "Individuals Name", "Individuals Name", :class => 'control-label'
    = text_field_tag :individuals, params[:individuals]
  .form-actions
    = button_tag "Search", :class => 'btn btn-primary'
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'partner_reset'
  = hidden_field_tag :advanced_search, :true


:javascript
  $(document).ready(function(){
    $('input[type="text"]'). attr("placeholder", "Multisearch Search Enabled");
  });

  $("#partner_reset").click(function() {
    $(this).closest('form').find("input,select").val("");
  });
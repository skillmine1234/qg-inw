<div class="form-horizontal show_form">
  <div class="form-main-with-color" style="background-color: #F1F2F8;">
    <div id="form-details">
      <h3>Inw Remitter Rule Details </h3>
      <br/>
      <p style="text-align:left; padding-left:6px; padding-bottom:17px">
        <% can = can? :edit, @inw_remitters_rule %>
        <a class="btn btn-primary <%= (can) ? '' : 'disabled' %> btn" href="<%= !(can) ? '#' : '/inw_remitters_rules/' + @inw_remitters_rule.id.to_s + '/edit' %>" role="button">Edit</a>
        <%= render 'unapproved_records/approve', :@record => @inw_remitters_rule %>
      </p>
      <table class="table no-border" style="table-layout: fixed; width: 100%">
        <% if !@inw_remitters_rule.nil? %>
          <tr>
            <td class="label">Version</td>
            <td class="value">
              <%= link_to "#{audit_count(@inw_remitters_rule)}", :controller => :inw_remitters_rules, :action => :audit_logs, :version_id => audit_count(@inw_remitters_rule), :id => @inw_remitters_rule.id %>
            </td>
          </tr>
          <tr>
            <td class="label">Form Errors</td>
            <td class="value">
              <%= ' ' %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :base, :prepend_text => "") %>
            </td>
          </tr>
          <tr>
            <td class="label">Remitter</td>
            <td class="value">
              <%= @inw_remitters_rule.remitters %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :remitters, :prepend_text => "") %>
            </td>
          </tr>
          <tr>
            <td class="label">Created By</td>
            <td>
              <%= @inw_remitters_rule.created_user.try(:username) %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :created_by, :prepend_text => "") %>
            </td>
          </tr>
          <tr>
            <td class="label">Updated By</td>
            <td>
              <%= @inw_remitters_rule.updated_user.try(:username) %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :updated_by, :prepend_text => "") %>
            </td>
          </tr>
          <tr>
            <td class="label">Created At</td>
            <td class="value">
              <%= @inw_remitters_rule.created_at.strftime("%d/%m/%Y %I:%M%p") %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :created_at, :prepend_text => "") %>
            </td>
          </tr>
          <tr>
            <td class="label">Updated At</td>
            <td class="value">
              <%= @inw_remitters_rule.updated_at.strftime("%d/%m/%Y %I:%M%p") %>
            </td>
            <td id="msg-error">
              <%= error_message_for(@inw_remitters_rule, :updated_at, :prepend_text => "") %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
